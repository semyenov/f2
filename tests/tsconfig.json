{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Test-specific compiler options
    "noEmit": true,
    "skipLibCheck": true,

    // More lenient for tests while maintaining safety
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // Enhanced types for testing
    "types": ["bun-types", "node", "vitest/globals", "@vitest/ui"],

    // Path mapping for cleaner test imports
    "baseUrl": "../",
    "paths": {
      "@/*": ["./src/*"],
      "@core": ["./src/core"],
      "@core/*": ["./src/core/*"],
      "@federation": ["./src/federation"],
      "@federation/*": ["./src/federation/*"],
      "@experimental": ["./src/experimental"],
      "@experimental/*": ["./src/experimental/*"],
      "@schema": ["./src/schema"],
      "@schema/*": ["./src/schema/*"],
      "@tests/*": ["./tests/*"]
    },

    // Test environment compatibility
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist", "coverage"]
}
