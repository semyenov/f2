{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "useUnknownInCatchVariables": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "types": ["bun-types", "node", "vitest/globals"],
    "verbatimModuleSyntax": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@runtime": ["./src/runtime/index"],
      "@runtime/*": ["./src/runtime/*"],
      "@runtime/core": ["./src/runtime/core/index"],
      "@runtime/core/*": ["./src/runtime/core/*"],
      "@runtime/effect": ["./src/runtime/effect/index"],
      "@runtime/effect/*": ["./src/runtime/effect/*"],
      "@runtime/schema": ["./src/runtime/schema/index"],
      "@runtime/schema/*": ["./src/runtime/schema/*"],
      "@federation": ["./src/federation/index"],
      "@federation/*": ["./src/federation/*"],
      "@federation/composition": ["./src/federation/composition/index"],
      "@federation/subgraphs": ["./src/federation/subgraphs/index"],
      "@federation/entities": ["./src/federation/entities/index"],
      "@infrastructure": ["./src/infrastructure/index"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@infrastructure/resilience": ["./src/infrastructure/resilience/index"],
      "@infrastructure/performance": ["./src/infrastructure/performance/index"],
      "@infrastructure/subscriptions": ["./src/infrastructure/subscriptions/index"],
      "@api": ["./src/api/index"],
      "@api/*": ["./src/api/*"],
      "@api/simple": ["./src/api/simple/index"],
      "@api/advanced": ["./src/api/advanced/index"],
      "@tooling": ["./src/tooling/index"],
      "@tooling/*": ["./src/tooling/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "tests/tsconfig.json"],
  "exclude": ["node_modules", "dist"]
}
