{
  "name": "@cqrs/federation",
  "version": "2.0.0",
  "description": "Apollo Federation framework with Effect-TS, ultra-strict TypeScript patterns, schema-first development, and enterprise-grade resilience features",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "import": "./dist/runtime/index.js",
      "require": "./dist/index.cjs"
    },
    "./runtime/core": {
      "types": "./dist/runtime/core/index.d.ts",
      "import": "./dist/runtime/core/index.js",
      "require": "./dist/index.cjs"
    },
    "./runtime/effect": {
      "types": "./dist/runtime/effect/index.d.ts",
      "import": "./dist/runtime/effect/index.js",
      "require": "./dist/index.cjs"
    },
    "./runtime/schema": {
      "types": "./dist/runtime/schema/index.d.ts",
      "import": "./dist/runtime/schema/index.js",
      "require": "./dist/index.cjs"
    },
    "./federation": {
      "types": "./dist/federation/index.d.ts",
      "import": "./dist/federation/index.js",
      "require": "./dist/index.cjs"
    },
    "./federation/subscriptions": {
      "types": "./dist/federation/subscriptions.d.ts",
      "import": "./dist/federation/subscriptions.js",
      "require": "./dist/index.cjs"
    },
    "./federation/mesh": {
      "types": "./dist/federation/mesh.d.ts",
      "import": "./dist/federation/mesh.js",
      "require": "./dist/index.cjs"
    },
    "./cloud": {
      "types": "./dist/cloud/index.d.ts",
      "import": "./dist/cloud/index.js",
      "require": "./dist/index.cjs"
    },
    "./cloud/kubernetes": {
      "types": "./dist/cloud/kubernetes.d.ts",
      "import": "./dist/cloud/kubernetes.js",
      "require": "./dist/index.cjs"
    },
    "./cloud/multi-cloud": {
      "types": "./dist/cloud/multi-cloud.d.ts",
      "import": "./dist/cloud/multi-cloud.js",
      "require": "./dist/index.cjs"
    },
    "./cloud/edge": {
      "types": "./dist/cloud/edge.d.ts",
      "import": "./dist/cloud/edge.js",
      "require": "./dist/index.cjs"
    },
    "./federation/composer": {
      "types": "./dist/federation/composer.d.ts",
      "import": "./dist/federation/composer.js",
      "require": "./dist/index.cjs"
    },
    "./federation/subgraph": {
      "types": "./dist/federation/subgraph.d.ts",
      "import": "./dist/federation/subgraph.js",
      "require": "./dist/index.cjs"
    },
    "./federation/error-boundaries": {
      "types": "./dist/federation/error-boundaries.d.ts",
      "import": "./dist/federation/error-boundaries.js",
      "require": "./dist/index.cjs"
    },
    "./federation/performance": {
      "types": "./dist/federation/performance.d.ts",
      "import": "./dist/federation/performance.js",
      "require": "./dist/index.cjs"
    },
    "./schema": {
      "types": "./dist/schema/ast.d.ts",
      "import": "./dist/schema/ast.js",
      "require": "./dist/index.cjs"
    },
    "./experimental": {
      "types": "./dist/experimental/index.d.ts",
      "import": "./dist/experimental/index.js",
      "require": "./dist/index.cjs"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js",
      "require": "./dist/index.cjs"
    },
    "./devtools": {
      "types": "./dist/devtools/index.d.ts",
      "import": "./dist/devtools/index.js",
      "require": "./dist/index.cjs"
    },
    "./devtools/playground": {
      "types": "./dist/devtools/playground.d.ts",
      "import": "./dist/devtools/playground.js",
      "require": "./dist/index.cjs"
    },
    "./devtools/schema-tools": {
      "types": "./dist/devtools/schema-tools.d.ts",
      "import": "./dist/devtools/schema-tools.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "federation": "./dist/cli/index.js",
    "@cqrs/federation": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*"
  ],
  "scripts": {
    "build": "tsdown",
    "build:tsc": "tsc --project tsconfig.build.json",
    "build:watch": "tsdown --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:complete": "node test-complete.ts",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json,md}'",
    "audit": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix",
    "security": "npm audit && npm run lint",
    "demo": "bun run test-complete.ts",
    "demo:functional": "bun run functional-patterns-standalone.ts",
    "demo:comprehensive": "bun run comprehensive-functional-demo.ts",
    "dev": "bun --watch test-complete.ts",
    "cli": "bun run src/cli/index.ts",
    "validate": "bun run typecheck && bun run typecheck:tests && bun run lint && bun run test:complete",
    "prepare": "husky",
    "prepublishOnly": "bun run clean && bun run build && bun run validate",
    "docs:generate": "typedoc --options typedoc.json"
  },
  "dependencies": {
    "@graphql-inspector/core": "^6.2.1",
    "commander": "^12.0.0",
    "dataloader": "^2.2.3",
    "effect": "^3.17.9",
    "graphql": "^16.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "bun-types": "^1.2.21",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-functional": "^9.0.2",
    "fast-check": "^4.2.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "knip": "^5.63.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "tsdown": "^0.14.2",
    "typedoc": "^0.28.11",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "graphql": "^16.11.0"
  },
  "keywords": [
    "graphql",
    "federation",
    "apollo",
    "apollo-federation-2",
    "effect-ts",
    "typescript",
    "ultra-strict",
    "functional-programming",
    "pattern-matching",
    "phantom-types",
    "schema-first",
    "ast",
    "circuit-breaker",
    "error-boundaries",
    "performance-optimization",
    "dataloader",
    "caching",
    "resilience",
    "enterprise",
    "production-ready",
    "cqrs",
    "event-sourcing"
  ],
  "author": "CQRS Federation Team",
  "license": "MIT",
  "homepage": "https://github.com/cqrs/federation#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/cqrs/federation.git",
    "directory": "packages/f2"
  },
  "bugs": {
    "url": "https://github.com/cqrs/federation/issues"
  },
  "funding": {
    "type": "sponsorship",
    "url": "https://github.com/sponsors/cqrs-federation"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "browserslist": [
    "node >= 20"
  ],
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
